# Copy to .env and fill in your values

# Feature flags
VITE_USE_MOCK=true
VITE_USE_REAL_WALLET=false
VITE_DEBUG=false
VITE_APP_NAME=goal.live

# Platform escrow wallet address (Sepolia)
VITE_PLATFORM_WALLET=0x0000000000000000000000000000000000000000

# Supabase — get from supabase.com → Project Settings → API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-public-key-here

# Server-side only — NEVER use in frontend bundle
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# World ID (Phase 4)
VITE_WORLD_APP_ID=app_staging_mock
